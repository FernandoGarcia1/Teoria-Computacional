extends ./layout/index

block contenido
    main.container.mt-5        
        h1.text-center.mt-5 #{pagina}  

        blockquote.text-center Descubre links relacionados con Teoria Computacional
        include ./layout/vista_testimoniales
        .row
            .col-md-12
                h2.d-block.w-100.text-center.mt-5 Agrega un nuevo Aporte
                if(errores)
                    each error in errores   
                        .alert.col.alert-danger.text-center= error.mensaje

            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales" method="POST")
                        .form-group
                            label.text-justify(for="nombre") Titulo
                            input#nombre(Type="text", placeholder="Titulo", name="nombre", class="form-control", value= nombre)
                        .form-group
                            label(for="correo") Descripcion
                            input#nombre(Type="text",cols="30", rows="3", placeholder="Descripcion", name="correo", class="form-control" value=correo)
                            .form-group 
                                label(for="mensaje") Link
                                textarea#mensaje(name="mensaje",  placeholder="ejemplo.com/ejemplo" class="form-control"
                                )= mensaje
                        input.btn.btn-success.btn-block(type="submit")

    